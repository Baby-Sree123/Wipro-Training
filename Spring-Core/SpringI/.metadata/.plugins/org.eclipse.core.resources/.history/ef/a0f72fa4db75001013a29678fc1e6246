package com.model;

import java.util.Date;
import java.util.List;
import java.util.Map;

public class DoctorRepository {
    private Map<String, List<Date>> doctorSchedules;

    public void setDoctorSchedules(Map<String, List<Date>> doctorSchedules) {
        this.doctorSchedules = doctorSchedules;
    }

    public boolean isDoctorAvailable(String doctorId, Date date) {
        List<Date> availableDates = doctorSchedules.get(doctorId);
        return availableDates != null && availableDates.contains(date);
    }
}
